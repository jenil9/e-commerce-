<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Cart</title>
  <style>
    * {
      margin: 0; padding: 0; box-sizing: border-box; font-family: Arial, sans-serif;
    }
    body {
      overflow-x: hidden;
      background: #f5f5f5;
    }
    nav {
      background-color: #333;
      color: white;
      padding: 1rem 3rem 1rem 1rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .menu-btn {
      font-size: 1.5rem;
      cursor: pointer;
    }
    .sidebar {
      position: fixed;
      top: 0; left: -250px;
      width: 250px; height: 100%;
      background-color: #444;
      color: white;
      padding: 1rem;
      transition: left 0.3s ease-in-out;
      z-index: 1000;
    }
    .sidebar.active {
      left: 0;
    }
    .sidebar h3 {
      margin-bottom: 1rem;
      cursor: pointer;
    }
    .sidebar ul {
      list-style: none;
      padding: 0;
    }
    .sidebar ul li {
      margin: 10px 0;
      cursor: pointer;
    }
    .content {
      margin-left: 1rem;
      padding: 1rem;
      max-width: 1000px;
      margin-top: 20px;
    }
    .grid {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      justify-content: center;
    }
    .product-card {
      background-color: white;
      border-radius: 10px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      padding: 15px;
      width: calc(33.333% - 20px);
      box-sizing: border-box;
      text-align: center;
      position: relative;
    }
    .product-card img {
      width: 100%;
      height: auto;
      max-height: 180px;
      object-fit: cover;
      border-radius: 8px;
    }
    .product-card h3 {
      margin: 10px 0 5px;
    }
    .price {
      font-weight: bold;
      color: #007BFF;
    }
    .product-card button {
      background-color: #007bff;
      color: white;
      border: none;
      padding: 8px 16px;
      margin-top: 10px;
      border-radius: 5px;
      font-weight: bold;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }
    .product-card button:hover {
      background-color: #0056b3;
    }
    .remove-btn {
      background-color: red !important;
      margin-top: 10px;
    }
    @media screen and (max-width: 992px) {
      .product-card {
        width: calc(50% - 20px);
      }
    }
    @media screen and (max-width: 600px) {
      .product-card {
        width: 100%;
      }
    }
    .empty-cart-container {
      height: 70vh; /* almost full viewport height */
      width: 100vw;
      display: flex;
      justify-content: flex-end;
      padding-right: 50px;
      align-items: center;
    }
    .empty-cart-message {
      padding: 40px 60px;
      border-radius: 20px;
      box-shadow: 0 8px 20px rgba(0, 123, 255, 0.25);
      text-align: center;
      max-width: 350px;
      width: 100%;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .empty-cart-message p {
      font-size: 1.5rem;
      color: #004a99;
      margin-bottom: 30px;
      font-weight: 600;
    }
    .home-btn {
      background-color: #007bff;
      color: white;
      border: none;
      padding: 14px 36px;
      font-size: 1.2rem;
      border-radius: 12px;
      cursor: pointer;
      box-shadow: 0 6px 12px rgba(0, 123, 255, 0.45);
      transition: background-color 0.3s ease, box-shadow 0.3s ease, transform 0.2s ease;
    }
    .home-btn:hover {
      background-color: #0056b3;
      box-shadow: 0 8px 16px rgba(0, 86, 179, 0.65);
      transform: translateY(-3px);
    }
    .home-btn:active {
      transform: translateY(-1px);
    }
  </style>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" crossorigin="anonymous" />
</head>
<body>

<nav>
  <span class="menu-btn" onclick="toggleMenu()">â˜°</span>
  <h2 id="greeting"><i class="fa-solid fa-cart-shopping fa-lg"></i> Your Cart</h2>
</nav>

<div class="sidebar" id="sidebar">
  <h3 onclick="toggleMenu()">Menu</h3>
  <ul>
    <li onclick="tohome()">Home</li>
    <li>Shop</li>
    <li>Categories</li>
    <li onclick="window.location.href='/cart'">Cart</li>
    <li onclick="goToProfile()">Profile</li>
    <li onclick="logout()">Logout</li>
  </ul>
</div>

<div class="content">
  <h1>Your Cart Items</h1>
  <div id="cart-grid" class="grid"></div>
  <div id="total-price" style="text-align:right; margin-top: 20px; font-size: 1.2rem; font-weight: bold;"></div>
  <div style="text-align:right; margin-top: 10px;">
    
  </div>
</div>

<script>
  const sidebar = document.getElementById('sidebar');

  function toggleMenu() {
    sidebar.classList.toggle('active');
  }

  function tohome() {
    window.location.href = "/home";
  }
function goToProfile() {
    fetch('/profile', {
      method: 'GET',
      headers: {
        'Authorization': localStorage.getItem('token')
      }
    })
    .then(response => response.text())
    .then(html => {
      document.open(); // clear current document
      document.write(html); // write new content
      document.close();
    })
    .catch(err => alert('Unauthorized or error loading profile.'));
  }
  function logout() {
    localStorage.removeItem('token');
    localStorage.removeItem('cart');
    window.location.href = "/";
  }

  function saveCart(cart) {
    localStorage.setItem('cart', JSON.stringify(cart));
  }

  function loadCart() {
    return JSON.parse(localStorage.getItem('cart')) || [];
  }

  

  function removeFromCart(id) {
    let cart = loadCart();
    cart = cart.filter(item => item.id !== id);
    saveCart(cart);
    displayCart();
  }

  function updateQuantity(id, change) {
    let cart = loadCart();
    const index = cart.findIndex(item => item.id === id);
    if (index !== -1) {
      cart[index].quantity += change;
      if (cart[index].quantity <= 0) {
        removeFromCart(id);
        return;
      }
      saveCart(cart);
      displayCart();
    }
  }

  function displayCart() {
    const cart = loadCart();
    const container = document.getElementById('cart-grid');
    container.innerHTML = '';

    if (cart.length === 0) {
      container.innerHTML = `
        <div class="empty-cart-container">
          <div class="empty-cart-message">
            <p>Your cart is empty.</p>
            <button class="home-btn" onclick="tohome()">Go to Home</button>
          </div>
        </div>
      `;
      document.getElementById('total-price').textContent = '';
      return;
    }

    let totalPrice = 0;

    cart.forEach(product => {
      totalPrice += product.price * product.quantity;

      const card = document.createElement('div');
      card.className = 'product-card';
      card.innerHTML = `
        <img src="${product.image}" alt="${product.title}">
        <h3>${product.title}</h3>
        <p class="price">$${product.price.toFixed(2)}</p>
        <p>
          Quantity: 
          <button onclick="updateQuantity(${product.id}, -1)">-</button>
          ${product.quantity}
          <button onclick="updateQuantity(${product.id}, 1)">+</button>
        </p>
        <button class="remove-btn" onclick="removeFromCart(${product.id})">Remove</button>
      `;
      container.appendChild(card);
    });

    document.getElementById('total-price').textContent = `Total: $${totalPrice.toFixed(2)}`;
  }

  // Initialize display on page load
  document.addEventListener('DOMContentLoaded', displayCart);
   
</script>

</body>
</html>
